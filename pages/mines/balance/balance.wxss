/* pages/mines/balance/balance.wxss */
.zero{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  background: #bdb0b000;
  font-family: PingFang-SC-Bold;
}
.one {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 20vh;
  background: #89d40c;
}
.one-1,.one-2{
  display: flex;
  flex: 1;
  justify-content: center;
  color: white;
}
.one-1{
  align-items: center;
}
.one-2{
  align-items: flex-start;
}
.two{
  background: white;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: 100%;
  height: 60vh;
}
.two-1{
  background: white;
  display: flex;
  width: 94%;
  height:10vh;
  align-items: center;
  border-bottom: 1px solid #d2d2d2;
}
.two-1-1{
  display: flex;
  flex:1;
  align-items: center;
}
.two-1-1>image{
  width: 40rpx;
  height: 40rpx;
}
.two-1-2{
  display: flex;
  align-items: center;
}
.two-1-2>image{
  width: 25rpx;
  height: 25rpx;
}