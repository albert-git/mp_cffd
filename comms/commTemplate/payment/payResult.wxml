<template name="fail">
<view style='display:flex;flex-direction:column;justify-content:space-between;background-color:#ebe8e7;padding-top:20rpx'>
  <view style='display:flex;flex-direction:column;width:100vw;font-family: PingFangSC-Regular;'>
    <view style='margin-left:0rpx;flex-direction:column;background-size: 100% 100%;display:flex;width:100%;height:80vh;background-image:url("../../../images/payment/pay-result-2.png");justify-content:center;'>
      <view style='display:flex;height:52vh;flex-direction:column;justify-content:center;'>
        <view style='display:flex;height:15vh;align-items:flex-end;justify-content:center'>
          <image style="width:120rpx;height:120rpx" src='/images/payment/pay-fail-2.png'></image>

        </view>
        <view style='display:flex;height:22vh;justify-content:center;padding-top:4vh;'>
          <text style='color:black;font-size:40rpx'>支付失败</text>
        </view>
        <view style='display:flex;height:70rpx;justify-content:center;align-items:flex-start'>
          <text style='color: #9b9b9b;font-size:30rpx' decode='{{true}}'>请您稍后再试</text>
        </view>
        
      </view>
      <view style='display:flex;height:20vh;align-items:center;justify-content:center'>
        <button style='width:80%;height:100rpx;border-radius:85rpx;background-color:#89d40c'>确定</button>
